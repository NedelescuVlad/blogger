<!DOCTYPE html>
<html>
	<head>
	  <title>Blogger</title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body>

		<nav class="navbar navbar-default">
		  <div class="container-fluid">
		    <!-- Brand and toggle get grouped for better mobile display -->
		    <div class="navbar-header">
		      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
		        <span class="sr-only">Toggle navigation</span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		      </button>
		      <%= link_to "Blogger App", articles_path, class: 'navbar-brand' %>
		    </div>

		    <!-- Collect the nav links, forms, and other content for toggling -->
		    <div class="collapse navbar-collapse pull-left" id="bs-example-navbar-collapse-1">
		      <ul class="nav navbar-nav">
		        <li><%= link_to "Write an Article", new_article_path %></li>
		        <li><a href="#">Most popular articles</a></li>
		        <li><a href="#">Articles by months</a></li>
		      </ul>
		    </div><!-- /.navbar-collapse -->
		  </div><!-- /.container-fluid -->
		</nav><!-- navbar end -->

		<p class="flash"><%= flash.notice %></p>
		<div id="container container-fluid">
			<div id="content">
				<%= yield %>
				<hr>
				<h6>
				<% if logged_in? %>
					<%= "Logged in as #{current_user.email}" %>
					<%= link_to "(logout)", logout_path %>
				<% else %>
					<%= link_to "(login)", login_path %>
				<% end %>
				</h6>
			</div>
		</div>
	</body>
</html>
